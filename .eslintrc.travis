{
    "rules": {
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-debugger": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-constant-condition": "error"
    },
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "jsx": true,
    },
    "plugins": [
        "react"
    ]
}
